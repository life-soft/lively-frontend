
.page {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	display: flex;
	flex-direction: column;
	gap: 100rpx;
}
.logo {
	display: flex;
	justify-content: center;
	align-items: center;
}
.pic {
	width: 450rpx;
	height: 180rpx;
}
.wxLoginBtn {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 20rpx;
	width: 600rpx;
	height: 100rpx;
	border-radius: 100rpx;
	background-color: #20D329;
}
.wechatLogo {
	width: 62rpx;
	height: 50rpx;
}
.loginText {
	color: white;
	letter-spacing: 5rpx;
	font-size: 40rpx;
}
button::after {
	border: none;
}
